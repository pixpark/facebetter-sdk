<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Fixed top image area -->
    <ImageView
        android:id="@+id/header_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header"
        android:contentDescription="@string/header_image" />

    <!-- Scrollable content area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top image placeholder area (250dp image height - 60dp button overlap - 20dp upward offset = 170dp) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@android:color/transparent" />

            <!-- Two large buttons (half overlapping top image, half overlapping white area) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="center_vertical"
                android:elevation="10dp">

                <!-- Beauty Effect button -->
                <LinearLayout
                    android:id="@+id/btn_beauty_effect"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/btn_beauty_effect_bg"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/camera2"
                        android:tint="#A0F196"
                        android:contentDescription="@string/logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/beauty_effect"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Beauty Template button -->
                <LinearLayout
                    android:id="@+id/btn_beauty_template"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/btn_beauty_template_bg"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/beautycard3"
                        android:contentDescription="@string/logo"
                        android:tint="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/beauty_template"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <!-- Feature grid area (white background, rounded corners, negative margin to move up under buttons) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="12dp">

                    <!-- Placeholder View to make space for overlapping buttons above (45dp overlap) -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@android:color/transparent" />

                    <!-- Feature grid content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                <!-- Row 1: Beauty, Reshape, Makeup, Body -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:baselineAligned="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_beauty"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/meiyan"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/beauty"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_reshape"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/meixing2"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/reshape"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_makeup"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/meizhuang"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/makeup"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp">

                        <LinearLayout
                            android:id="@+id/btn_body"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/meiti"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/body_beautification"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon badge -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soon"
                            android:textSize="9sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/soon_badge"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            app:layout_constraintTop_toTopOf="@id/btn_body"
                            app:layout_constraintEnd_toEndOf="@id/btn_body"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!-- Row 2: Filter, Sticker, Virtual Background, Quality Adjustment -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:baselineAligned="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_filter"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/lvjing"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/filter"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon badge removed -->
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_sticker"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/tiezhi2"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sticker"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon badge removed -->
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_virtual_bg"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/xunibeijing"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/virtual_background"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp">

                        <LinearLayout
                            android:id="@+id/btn_quality"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/huazhitiaozheng2"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quality_adjustment"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon badge -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soon"
                            android:textSize="9sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/soon_badge"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            app:layout_constraintTop_toTopOf="@id/btn_quality"
                            app:layout_constraintEnd_toEndOf="@id/btn_quality"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


                </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Atomic Capabilities area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atomic_capabilities"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- More effect buttons: Hair Color, Style Makeover, Face Detection, Gesture Detection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:baselineAligned="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_hair_color"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/huanfase"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hair_color"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon badge -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soon"
                            android:textSize="9sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/soon_badge"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            app:layout_constraintTop_toTopOf="@id/btn_hair_color"
                            app:layout_constraintEnd_toEndOf="@id/btn_hair_color"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_style"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/fengge"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/style_makeover"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon badge -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soon"
                            android:textSize="9sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/soon_badge"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            app:layout_constraintTop_toTopOf="@id/btn_style"
                            app:layout_constraintEnd_toEndOf="@id/btn_style"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_face_detect"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/renlianjiance"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/face_detection"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp">

                        <LinearLayout
                            android:id="@+id/btn_gesture_detect"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/shoushi"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gesture_detection"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon badge -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soon"
                            android:textSize="9sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/soon_badge"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            app:layout_constraintTop_toTopOf="@id/btn_gesture_detect"
                            app:layout_constraintEnd_toEndOf="@id/btn_gesture_detect"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!-- Row 2: Green Screen Keying -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_green_screen"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/lvmukoutu"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/green_screen_keying"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon badge -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soon"
                            android:textSize="9sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/soon_badge"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            app:layout_constraintTop_toTopOf="@id/btn_green_screen"
                            app:layout_constraintEnd_toEndOf="@id/btn_green_screen"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_external_texture"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/texture"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/external_texture"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Settings button (floating on top layer to ensure clickable) -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/setting"
        android:contentDescription="@string/settings"
        android:tint="@android:color/white"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp" />

</FrameLayout>
