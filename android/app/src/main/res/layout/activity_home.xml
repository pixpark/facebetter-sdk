<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeActivity">

    <!-- 固定的顶部图片区域 -->
    <ImageView
        android:id="@+id/header_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header"
        android:contentDescription="@string/header_image" />

    <!-- 设置按钮（浮动在顶部图片上） -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/setting"
        android:contentDescription="@string/settings"
        android:tint="@android:color/white"
         android:padding="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" /> 

    <!-- 滚动内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 顶部图片占位区域（250dp图片高度 - 60dp按钮压住部分 - 20dp向上偏移 = 170dp） -->
            <View
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@android:color/transparent" />

            <!-- 两个大按钮（一半压住顶部图片，一半压住白色区域） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="center_vertical"
                android:elevation="10dp">

                <!-- 美颜特效按钮 -->
                <LinearLayout
                    android:id="@+id/btn_beauty_effect"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/btn_beauty_effect_bg"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/camera2"
                        android:tint="#A0F196"
                        android:contentDescription="@string/logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/beauty_effect"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- 美颜模板按钮 -->
                <LinearLayout
                    android:id="@+id/btn_beauty_template"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/btn_beauty_template_bg"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/beautycard3"
                        android:contentDescription="@string/logo"
                        android:tint="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/beauty_template"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <!-- 功能网格区域（白色背景，带圆角，负margin让它向上移动到按钮下方） -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="12dp">

                    <!-- 占位View，为上方重叠的按钮留出空间（45dp重叠） -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@android:color/transparent" />

                    <!-- 功能网格内容 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                <!-- 第1行：美颜、美型、美妆、美体 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:baselineAligned="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_beauty"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/meiyan"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/beauty"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_reshape"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/meixing2"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/reshape"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_makeup"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/meizhuang"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/makeup"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp">

                        <LinearLayout
                            android:id="@+id/btn_body"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/meiti"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/body_beautification"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon 标签 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soon"
                            android:textSize="9sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/soon_badge"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            app:layout_constraintTop_toTopOf="@id/btn_body"
                            app:layout_constraintEnd_toEndOf="@id/btn_body"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!-- 第2行：滤镜、贴纸、虚拟背景、画质调整 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:baselineAligned="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_filter"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/lvjing"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/filter"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon 标签 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soon"
                            android:textSize="9sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/soon_badge"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            app:layout_constraintTop_toTopOf="@id/btn_filter"
                            app:layout_constraintEnd_toEndOf="@id/btn_filter"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_sticker"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/tiezhi2"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sticker"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon 标签 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soon"
                            android:textSize="9sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/soon_badge"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            app:layout_constraintTop_toTopOf="@id/btn_sticker"
                            app:layout_constraintEnd_toEndOf="@id/btn_sticker"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_virtual_bg"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/xunibeijing"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/virtual_background"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp">

                        <LinearLayout
                            android:id="@+id/btn_quality"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/huazhitiaozheng2"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quality_adjustment"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon 标签 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soon"
                            android:textSize="9sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/soon_badge"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            app:layout_constraintTop_toTopOf="@id/btn_quality"
                            app:layout_constraintEnd_toEndOf="@id/btn_quality"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


                </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 原子能力区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atomic_capabilities"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- 更多特效按钮：换发色、风格套装、人脸检测、手势检测 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:baselineAligned="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_hair_color"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/huanfase"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hair_color"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon 标签 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soon"
                            android:textSize="9sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/soon_badge"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            app:layout_constraintTop_toTopOf="@id/btn_hair_color"
                            app:layout_constraintEnd_toEndOf="@id/btn_hair_color"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp">

                        <LinearLayout
                            android:id="@+id/btn_style"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/feature_grid_item_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:alpha="0.5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/fengge"
                                android:contentDescription="@string/feature_icon"
                                android:tint="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/style_makeover"
                                android:textColor="#757575"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Soon 标签 -->
